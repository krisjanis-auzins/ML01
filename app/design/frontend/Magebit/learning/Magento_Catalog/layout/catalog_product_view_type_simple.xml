<?xml version="1.0"?>
<!--
/**
 * Magebit/learning
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.type">
            <block class="Magento\Catalog\Block\Product\View\Type\Simple" name="product.info.simple" as="product_type_data" template="Magento_Catalog::product/view/type/default.phtml"/>
            <container name="product.info.simple.extra" after="product.info.simple" as="product_type_data_extra" label="Product Extra Info"/>
        </referenceContainer>
        <referenceContainer  name="product.info.stock.sku">
            <referenceContainer name="product.info.type" remove="true" />
        </referenceContainer>
        <referenceContainer name="product.info.social" remove="true" />
        <referenceContainer name="product.info.details" remove="true" />

        <referenceContainer name="content">
            <container name="related.block.anchor" htmlTag="div" htmlClass="block-related-anchor">
                <block class="Magento\Framework\View\Element\Text">
                    <arguments>
                        <argument name="text" xsi:type="string"><![CDATA[&nbsp;]]></argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>

        <move element="product.info.upsell" destination="product.info.main" after="product.info.addtocart"/>
        <move element="product.attributes" destination="product.info.main" after="product.info.price"/>
        <move element="product.info.description" destination="product.info.main" before="product.attributes" after="product.info.price"/>
    </body>
</page>
