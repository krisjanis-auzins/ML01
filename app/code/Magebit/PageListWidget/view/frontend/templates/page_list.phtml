<?php
/**
 * @var $block \Magebit\PageListWidget\Block\Widget\PageList
 */

?>
<?php $pages = $block->getSelectedCmsPages(); ?>

<?php if (!$pages): ?>
    <?php return ?>
<?php endif; ?>

<?php if ($title = $block->getTitle()): ?>
    <h3><?= $title; ?></h3>
<?php endif; ?>
<ul>
    <?php foreach ($pages as $page): ?>
        <li>
            <a href="<?= $block->getUrl($page['identifier']) ?>">
                <?= $page['title'] ?>
            </a>
        </li>
    <?php endforeach; ?>
</ul>
